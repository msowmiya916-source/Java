class DownloadTask extends Thread {
    private String fileName;

    DownloadTask(String fileName) {
        this.fileName = fileName;
    }

    public void run() {
        for (int i = 1; i <= 5; i++) {
            System.out.println(fileName + " downloading... " + (i * 20) + "%");
            try {
                Thread.sleep(500);
            } catch (InterruptedException e) {
                System.out.println(e);
            }
        }
        System.out.println(fileName + " download completed");
    }
}

public class DownloadManager {
    public static void main(String[] args) {
        new DownloadTask("File A").start();
        new DownloadTask("File B").start();
        new DownloadTask("File C").start();
    }
}
